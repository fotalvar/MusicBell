# Archivo de configuración para MusicBell

# Puerto del servidor
FLASK_PORT=5000
FLASK_HOST=0.0.0.0

# Modo debug (cambiar a False en producción)
FLASK_DEBUG=False

# Rutas
SONGS_DIR=canciones
CONFIG_DIR=config
LOGS_DIR=logs

# Archivo de configuración
CONFIG_FILE=config/canciones.json

# Verificar archivos cada X segundos
CHECK_INTERVAL=10

# Lenguaje
LANGUAGE=es

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
